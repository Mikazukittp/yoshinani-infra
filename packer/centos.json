{
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "ap-northeast-1",
      "source_ami": "{{user `ami_id`}}",
      "instance_type": "t2.micro",
      "availability_zone" : "ap-northeast-1a",
      "iam_instance_profile" : "{{user `iam_instance_profile`}}",
      "associate_public_ip_address": "true",
      "ssh_private_ip": "true",
      "ssh_port": "{{user `ssh_port`}}",
      "ssh_keypair_name": "{{user `ssh_keypair_name`}}",
      "ssh_private_key_file": "{{user `ssh_private_key_file`}}",
      "ssh_username": "ec2-user",
      "ssh_timeout": "5m",
      "ssh_pty" : "true",
      "tags" : {
        "Name"       : "{{isotime | clean_ami_name}}_{{user `playbook_name`}}",
        "PackerName" : "{{user `ami_name`}}",
        "source_ami" : "{{user `ami_id`}}",
        "service"    : "{{user `service`}}",
        "playbook"   : "{{user `playbook_name`}}"
      },
      "ami_name": "{{user `service`}}_{{user `playbook_name`}}_{{user `ami_name`}}_{{isotime | clean_ami_name}}",
      "user_data_file": "user_data/user_data.sh"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sleep 120; sudo yum install -y ansible"
      ]
    },
    {
      "environment_vars": [
        "UPDATE={{user `awsupdate`}}"
      ],
      "type": "shell",
      "only": ["amazon-ebs"],
      "scripts": [
        "amazon_script/update.sh",
        "amazon_script/growroot.sh"
      ]
    }
  ]
}
